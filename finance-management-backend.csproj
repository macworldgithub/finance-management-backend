<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>finance_management_backend</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- Built-in OpenAPI support for ASP.NET Core 8 -->
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.8" />
    
    <!-- MongoDB driver (you can upgrade later if needed) -->
    <PackageReference Include="MongoDB.Driver" Version="3.5.1" />

    <!-- Swagger / Swashbuckle with .NET 8 support -->
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.1" />
  </ItemGroup>

</Project>

